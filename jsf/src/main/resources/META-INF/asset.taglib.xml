<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
                xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibary_2_2.xsd"
                version="2.2">

    <namespace>http://xmlns.dpi.com/jsf/component</namespace>

    <tag>
        <tag-name>tab</tag-name>
        <component>
            <component-type>ir.javadev.jsf.component.Tab</component-type>
        </component>
        <attribute>
            <name>src</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>active</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>text</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>

